{
  "name": "nix-ide",
  "displayName": "Nix IDE",
  "description": "Nix language support with formatting and error report.",
  "version": "0.1.12",
  "publisher": "jnoortheen",
  "icon": "images/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "keywords": [
    "nix",
    "IDE"
  ],
  "bugs": {
    "url": "https://github.com/jnoortheen/vscode-nix-ide/issues"
  },
  "homepage": "https://github.com/jnoortheen/vscode-nix-ide",
  "repository": {
    "type": "git",
    "url": "https://github.com/jnoortheen/vscode-nix-ide"
  },
  "main": "dist/extension.js",
  "activationEvents": [
    "onLanguage:nix"
  ],
  "contributes": {
    "languages": [
      {
        "id": "nix",
        "aliases": [
          "Nix",
          "nix"
        ],
        "extensions": [
          ".nix"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nix",
        "scopeName": "source.nix",
        "path": "./syntaxes/nix.tmLanguage.json"
      },
      {
        "scopeName": "markdown.nix.codeblock",
        "path": "./syntaxes/injection.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.nix": "nix"
        }
      }
    ],
    "snippets": [
      {
        "language": "nix",
        "path": "./snippets.json"
      }
    ],
    "configuration": {
      "title": "NixIDE",
      "properties": {
        "nix.serverPath": {
          "type": "string",
          "default": "rnix-lsp",
          "description": "Location of the nix language server command."
        },
        "nix.enableLanguageServer": {
          "type": "boolean",
          "default": false,
          "description": "Use LSP instead of nix-instantiate and nixpkgs-fmt."
        }
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "*",
    "@commitlint/config-conventional": "^13.0",
    "@commitlint/prompt-cli": "*",
    "@types/command-exists": "^1.2.0",
    "@types/node": "^16.0",
    "@types/vscode": "*",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^7.0.0",
    "js-yaml": "^4.0.0",
    "ovsx": "^0.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "standard-version": "^9.1",
    "typescript": "^4.1.5",
    "vsce": "^1.87.0"
  },
  "scripts": {
    "prebuild": "js-yaml syntaxes/nix.YAML-tmLanguage > syntaxes/nix.tmLanguage.json && js-yaml syntaxes/injection.yml > syntaxes/injection.json",
    "build": "tsc -p ./",
    "watch": "yarn build --watch",
    "postinstall": "husky install",
    "release": "yarn install && yarn lint && yarn build && standard-version && git push --follow-tags && yarn run publish",
    "package": "vsce package",
    "upload": "yarn package && vsce publish && ovsx publish --pat $OVS_PAT",
    "lint": "eslint --ext ts src"
  },
  "dependencies": {
    "command-exists": "^1.2.9",
    "vscode-languageclient": "^7.0.0"
  }
}
