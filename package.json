{
  "name": "nix-ide",
  "displayName": "Nix IDE",
  "description": "Nix language support with formatting and error report.",
  "version": "0.1.3",
  "publisher": "jnoortheen",
  "icon": "images/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "keywords": [
    "nix",
    "IDE"
  ],
  "bugs": {
    "url": "https://github.com/jnoortheen/vscode-nix-ide/issues"
  },
  "homepage": "https://github.com/jnoortheen/vscode-nix-ide",
  "repository": {
    "type": "git",
    "url": "https://github.com/jnoortheen/vscode-nix-ide"
  },
  "main": "dist/extension.js",
  "activationEvents": [
    "onLanguage:nix"
  ],
  "contributes": {
    "languages": [
      {
        "id": "nix",
        "aliases": [
          "Nix",
          "nix"
        ],
        "extensions": [
          ".nix"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nix",
        "scopeName": "source.nix",
        "path": "./syntaxes/nix.tmLanguage.json"
      },
      {
        "scopeName": "markdown.nix.codeblock",
        "path": "./syntaxes/injection.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.nix": "nix"
        }
      }
    ],
    "snippets": [
      {
        "language": "nix",
        "path": "./snippets.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "js-yaml": "^3.14.0",
    "prettier": "^2.0.0",
    "standard-version": "^9.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.7",
    "vsce": "^1.78.0",
    "vscode": "^1.1.25"
  },
  "scripts": {
    "prebuild": "js-yaml syntaxes/nix.YAML-tmLanguage > syntaxes/nix.tmLanguage.json && js-yaml syntaxes/injection.yml > syntaxes/injection.json",
    "build": "tsc -p ./",
    "watch": "yarn build --watch",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "release": "yarn build && standard-version && git push --follow-tags && vsce publish"
  }
}
