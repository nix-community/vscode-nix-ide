{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"group": "build",
			"label": "npmWatch",
			"isBackground": true,
			"detail": "bun run watch",
			// This is needed so vscode doesn't block when this is ran as preLaunchTask.
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"line": 2,
						"message": 5,
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": ".",
				}
			}
		}
	]
}